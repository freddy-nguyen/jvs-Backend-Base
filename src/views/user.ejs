<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>

<!-- Class container inside div helps responsive, class user-infor-container helps us css later -->
<!-- Class row and column, col-12 = full screen with side margins-->

<body>
    <div class="user-infor-container">
        <form method="POST" action="/users/create-user">
            <div class="container">
                <div class="mb-2 mt-4">
                    <h1>Create a New User</h1>
                </div>
                <div class="form-group mb-2 mt-4 col-6">
                    <label for="email">Email address</label>
                    <!-- NAME IS HERE BC BACKEND DEMANDS WE USE NAME FOR STORING USER INPUT TO DB -->
                    <input name="email" type="email" class="form-control mt-2" id="email" aria-describedby="emailHelp"
                        placeholder="yourmail@mail.com" required>
                    <!-- <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                        else.</small> -->
                </div>
                <div class="form-group mt-4 col-6">
                    <label for="password">Password</label>
                    <input name="password" type="password" class="form-control mt-2" id="password" placeholder=""
                        required>
                </div>
                <!-- <div class="form-check"> -->
                <!-- <input type="checkbox" class="form-check-input" id="exampleCheck1"> -->
                <!-- <label class="form-check-label" for="exampleCheck1">Check me out</label> -->
                <!-- </div> -->
                <div class="form-group mt-4 col-6">
                    <label for="username">Username</label>
                    <input name="username" type="text" class="form-control mt-2" id="username" placeholder="awesometom"
                        required>
                </div>
                <div><button type="submit" class="btn btn-primary mt-4">Submit</button></div>
            </div>
        </form>
    </div>
</body>

</html>